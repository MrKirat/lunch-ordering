%h2.text-center Sign up
= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "devise-form ml-auto mr-auto"}) do |f|
  = f.error_notification
  = f.input :email, input_html: { autocomplete: 'email', autofocus: true }
  = f.input :password, minlength: @minimum_password_length, input_html: { autocomplete: 'new-password' }
  = f.input :password_confirmation, autocomplete: "new-password"
  - if devise_mapping.rememberable?
    = f.input :remember_me, as: :boolean, class: "text-center"
  = f.button :submit, "Sign up", class: "btn-primary text-center"
.text-center
  = render "users/shared/links"