%h2.text-center Edit #{resource_name.to_s.humanize}
= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "devise-form ml-auto mr-auto" }) do |f|
  = f.error_notification
  = f.input :email, input_html: { autocomplete: 'email', autofocus: true }
  - if devise_mapping.confirmable? && resource.pending_reconfirmation?
    %div
      Currently waiting confirmation for: #{resource.unconfirmed_email}
  %i (leave blank if you don't want to change it)
  = f.input :password, minlength: @minimum_password_length, input_html: { autocomplete: 'new-password' }
  = f.input :password_confirmation, autocomplete: "new-password"
  %i (we need your current password to confirm your changes)
  = f.input :current_password, autocomplete: "current-password"
  = f.button :submit, "Update", class: "btn btn-success text-center"
  = link_to "Back", :back, class: "btn btn-primary"
  %h3.mt-4 Cancel my account
  = link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-danger"
