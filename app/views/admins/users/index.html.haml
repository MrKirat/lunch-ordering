%h1 Listing users

= link_to 'New User', new_admins_user_path

%table.table.mt-3
  %thead
    %tr
      %th Email
      %th{colspan: 3}

  %tbody
    - @users.each do |user|
      %tr
        %td= user.email
        %td= link_to 'Show', admins_user_path(user)
        %td= link_to 'Edit', edit_admins_user_path(user)
        %td= link_to 'Destroy', admins_user_path(user), method: :delete, data: { confirm: 'Are you sure?' }