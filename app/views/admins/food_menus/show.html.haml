%p
  %b Date:
  = menu_date(@menu)
- @menu.categories.each do |category|
  %h3= category.name

  %table.table
    %thead
      %tr
        %th Name
        %th Price

    %tbody
      - category.items.each do |item|
        %tr
          %th= item.name
          %th= item.price

= link_to 'Edit', edit_admins_food_menu_path(@menu)
\|
= link_to 'Back', admins_food_menus_path
