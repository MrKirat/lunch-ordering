%h1 Listing menus

= link_to 'New menu', new_admins_food_menu_path

%table.table.mt-3
  %thead
    %tr
      %th Date
      %th{colspan: 3}

  %tbody
    - @menus.each do |menu|
      %tr
        %td= menu_date(menu)
        %td= link_to 'Show', admins_food_menu_path(menu)
        %td= link_to 'Edit', edit_admins_food_menu_path(menu)
        %td= link_to 'Destroy', admins_food_menu_path(menu), method: :delete, data: { confirm: 'Are you sure?' }


