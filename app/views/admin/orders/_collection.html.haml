%table.table
  %thead
    %tr
      %th Date
      %th Cost
      %th Customer
      %th

  %tbody
    - orders.each do |order|
      %tr
        %td= order.created_at
        %td= order.total_cost
        %td= link_to order.customer.email, admin_user_path(order.customer)
        %td= link_to 'Show', admin_order_path(order)