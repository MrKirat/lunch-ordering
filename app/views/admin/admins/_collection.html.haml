%table.table.mt-3
  %thead
    %tr
      %th Email
      %th Roles
      %th{colspan: 3}

  %tbody
    - admins.each do |admin|
      %tr
        %td
          - if current_admin == admin
            = "#{admin.email} (you)"
          - else
            = admin.email
        %td= admin.roles.map(&:name).join(', ')
        %td= link_to 'Show', admin_admin_path(admin)
        %td= link_to 'Edit', edit_admin_admin_path(admin)
        %td= link_to 'Destroy', admin_admin_path(admin), method: :delete, data: { confirm: 'Are you sure?' }